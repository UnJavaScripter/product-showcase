/*
| Layout (direction)
|
*/

[layout="row"]
    flex-direction row

[layout="column"]
    flex-direction column


[layout-sm="row"]
    @media screen and (max-width MEDIA_SM)
        flex-direction row

[layout-sm="column"]
    @media screen and (max-width MEDIA_SM)
        flex-direction column


/*
| Align
|
*/

[align="start"]
    justify-content flex-start

[align="end"]
    justify-content flex-end

[align="center"]
    justify-content center
