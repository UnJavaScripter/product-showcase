/*
| Flex
|
*/

[flex]
    display flex
    flex 1 1 auto
    align-items center
    flex-wrap wrap
    
// Mixin
_flex(width)
    {"[flex='"}{width}{"']"}
        min-width width+"%"!important
        flex-grow 0
        if(width % 5 != 0)
            flex-basis width+(width/100)+"%"
        else
            flex-basis width+"%"
        
    
